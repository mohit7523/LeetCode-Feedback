class Solution {
public:
    int maxDepth(string s) {
      stack<int>st;
        int mxm=0;
        for(int i=0; i<s.length(); i++)
        {
            if(s[i]=='(')
            {
                st.push(s[i]);
                if(st.size()>mxm)
                    mxm=st.size();
            }
            else if(s[i]==')')
                st.pop();
        }
        return mxm;
    }
};
